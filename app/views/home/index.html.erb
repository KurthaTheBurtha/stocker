<%= form_tag root_path, :method => 'POST' do %>
  <div class="form-group">
    <%= text_field_tag 'id', nil, placeholder: 'Enter Company Ticker Symbol', size: 50, class: 'form-control' %>
    <%= submit_tag 'Lookup Stock Quote', class: 'btn btn-success' %>
  </div>
<% end %>
<br/>
<% if @stock %>
  <strong>Company Name:</strong><%= @stock.company_name %> - <%= @stock.symbol %><br/>
  <strong>Current Ask:</strong><%= @stock.iex_realtime_price %><br/>
  <strong>Earnings Per Share:</strong><br/>
  <strong>Price/Earning Ratio:</strong><%= @stock.pe_ratio %><br/>
  <strong>Market Cap:</strong><%= @stock.market_cap %><br/>
  <strong>Stock Open:</strong><%= @stock.open %><br/>
  <strong>Day's Range:</strong><%= @stock.low %> - <%= @stock.high %><br/>
  <strong>Year High:</strong><%= @stock.week52_high %><br/>
  <strong>Year Low:</strong><%= @stock.week52_low %><br/>
<% elsif @nothing %>
  <%= @nothing %>
<% elsif @error %>
  <%= @error %>
<% end %>
